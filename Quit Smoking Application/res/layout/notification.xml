<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RatingBar
        android:id="@+id/noti_ratingBar_currentstate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="5"
        android:numStars="5" />

    <TextView
        android:id="@+id/textView_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/noti_tv_curren"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RatingBar
        android:id="@+id/noti_ratingBar_today"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:rating="4"
        android:numStars="5" />

    <TextView
        android:id="@+id/noti_textView_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/noti_tv_today"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/add4" />

</LinearLayout>